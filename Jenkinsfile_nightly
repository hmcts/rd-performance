#!groovy

properties([
        pipelineTriggers([cron('00 21 * * *')]),
        parameters([
                string(name: 'ENVIRONMENT', defaultValue: 'perftest', description: 'Environment to test'),
                string(name: 'URL_TO_TEST', defaultValue: 'https://rd-professional-api-perftest.service.core-compute-perftest.internal', description: 'The URL you want to run these tests against'),
                string(name: 'IDAM_URL', defaultValue: 'https://idam-api.perftest.platform.hmcts.net', description: 'The IDAM API Url to create and delete users from'),
                string(name: 'RPE_URL', defaultValue: 'http://rpe-service-auth-provider-perftest.service.core-compute-perftest.internal', description: 'The CCD Url'),
                string(name: 'BaseURL', defaultValue: 'https://rd-professional-api-perftest.service.core-compute-perftest.internal', description: 'The CCD Case Create Url')
        ])
])



@Library("Infrastructure") 


def product = "prd"
def component = "internal-external-api"

withNightlyPipeline("java", product, component) {
    env.TEST_URL = 'https://rd-professional-api-perftest.service.core-compute-perftest.internal'
    env.BaseURL = 'https://rd-professional-api-perftest.service.core-compute-perftest.internal'
    env.IDAM_URL = 'https://idam-api.perftest.platform.hmcts.net'
    env.RPE_URL = 'http://rpe-service-auth-provider-perftest.service.core-compute-perftest.internal'

    enablePerformanceTest()

    after('performanceTest') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: 'functional-output/**/*'
    }

    enableSlackNotifications('#prd-nightly-builds')

}

withPipeline(type, product, component) {
    enablePerformanceTest()
}